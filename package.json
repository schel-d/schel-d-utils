{
  "name": "schel-d-utils",
  "version": "1.0.0",
  "description": "A library for code common to my various NodeJS/Browser projects.",
  "main": "index.js",
  "types": "index.d.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./index.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "prebuild": "npm run clean",
    "build": "tsc --project src/tsconfig.json",
    "lint": "eslint . & tsc --project src/tsconfig.json --noemit & tsc --project tests/tsconfig.json --noemit",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schel-d/schel-d-utils.git"
  },
  "author": "schel-d",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schel-d/schel-d-utils/issues"
  },
  "homepage": "https://github.com/schel-d/schel-d-utils#readme",
  "keywords": [
    "utils",
    "dom",
    "javascript"
  ],
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "esbuild": "^0.15.13",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.2.2",
    "prettier": "2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "dist/**/*"
  ]
}
